# 豆包 API 配置
# 请在 https://console.volcengine.com/ark 获取您的 API Key
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3

# 豆包模型 ID
# 便宜模型用于初筛（例如：doubao-lite-4k）
DOUBAO_CHEAP_MODEL=ep-20241110162735-pdq2w
# 高质量模型用于精读（例如：doubao-pro-32k）
DOUBAO_PREMIUM_MODEL=ep-20241110162735-pdq2w

# HuggingFace Token（可选，用于更高的 API 速率限制）
HF_TOKEN=

# 定时任务配置
SCHEDULE_TIME=11:00
CHECK_ON_STARTUP=true

# 应用配置
HOST=127.0.0.1
PORT=8000
DATABASE_PATH=./data/papers.db
LOG_PATH=./logs

# 论文筛选配置
MAX_PAPERS_PER_DAY=50
SELECTED_PAPERS_COUNT=6
